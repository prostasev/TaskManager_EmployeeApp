<Window x:Class="EmployeeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp.Views"
        xmlns:viewmodels="clr-namespace:EmployeeApp.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Employee Management" Height="600" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления для администратора -->
        <StackPanel Grid.Row="0" Margin="10" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Управление задачами" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Grid>
                    <TextBox Text="{Binding NewTaskName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,5,0"/>
                    <TextBlock Text="Название задачи" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                               Visibility="{Binding NewTaskName, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                </Grid>
                <Grid>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,5,0"/>
                    <TextBlock Text="Описание задачи" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                               Visibility="{Binding NewTaskDescription, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                </Grid>
                <Button Content="Создать задачу" Command="{Binding CreateTaskCommand}" Margin="0,0,5,0"/>
                <Button Content="Обновить задачу" Command="{Binding UpdateTaskCommand}" Margin="0,0,5,0"/>
                <Button Content="Удалить задачу" Command="{Binding DeleteTaskCommand}"/>
            </StackPanel>

            <TextBlock Text="Управление обязанностями" FontWeight="Bold" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Grid>
                    <TextBox Text="{Binding NewDutyName, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,0,5,0"/>
                    <TextBlock Text="Название обязанности" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                               Visibility="{Binding NewDutyName, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                </Grid>
                <DatePicker SelectedDate="{Binding NewDutyStartDate}" Width="120" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding NewDutyEndDate}" Width="120" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" DisplayMemberPath="Name" Width="150" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" DisplayMemberPath="FullName" Width="150" Margin="0,0,5,0"/>
                <Button Content="Создать обязанность" Command="{Binding CreateDutyCommand}" Margin="0,0,5,0"/>
                <Button Content="Обновить обязанность" Command="{Binding UpdateDutyCommand}" Margin="0,0,5,0"/>
                <Button Content="Удалить обязанность" Command="{Binding DeleteDutyCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Список обязанностей -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Ваши обязанности" FontWeight="Bold"/>
                <ListView ItemsSource="{Binding Duties}" SelectedItem="{Binding SelectedDuty}" Margin="0,5" Height="300">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding StartDate, StringFormat=dd.MM.yyyy}"/>
                            <GridViewColumn Header="Конец" DisplayMemberBinding="{Binding EndDate, StringFormat=dd.MM.yyyy}"/>
                            <GridViewColumn Header="Задача" DisplayMemberBinding="{Binding Task.Name}"/>
                            <GridViewColumn Header="Сотрудник" DisplayMemberBinding="{Binding Employee.FullName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <!-- Панель поиска и фильтрации -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Поиск" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Grid>
                        <TextBox Text="{Binding SearchEmployeeText, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <TextBlock Text="Поиск сотрудников" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                                   Visibility="{Binding SearchEmployeeText, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                    </Grid>
                    <Button Content="Искать" Command="{Binding SearchEmployeesCommand}" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Grid>
                        <TextBox Text="{Binding SearchTaskText, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <TextBlock Text="Поиск задач" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                                   Visibility="{Binding SearchTaskText, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                    </Grid>
                    <Button Content="Искать" Command="{Binding SearchTasksCommand}" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Grid>
                        <TextBox Text="{Binding SearchDutyText, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <TextBlock Text="Поиск обязанностей" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0"
                                   Visibility="{Binding SearchDutyText, Converter={StaticResource BoolToVis}, ConverterParameter={StaticResource False}}"/>
                    </Grid>
                    <Button Content="Искать" Command="{Binding SearchDutiesCommand}" Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Фильтрация по срокам" FontWeight="Bold" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <DatePicker SelectedDate="{Binding FilterStartDate}" Width="120" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{Binding FilterEndDate}" Width="120"/>
                </StackPanel>
                <Button Content="Фильтровать" Command="{Binding FilterDutiesCommand}" Margin="0,5"/>

                <TextBlock Text="Сотрудники" FontWeight="Bold" Margin="0,10,0,0"/>
                <ListView ItemsSource="{Binding Employees}" Height="100" Margin="0,5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}"/>
                            <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Position.PositionName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Text="Задачи" FontWeight="Bold" Margin="0,10,0,0"/>
                <ListView ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" Height="100" Margin="0,5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<Window x:Class="EmployeeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp.Views"
        xmlns:viewmodels="clr-namespace:EmployeeApp.ViewModels"
        mc:Ignorable="d"
        Title="Employee Management" Height="688" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#252A2E"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
     

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Стиль для ComboBox -->
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#343A40"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                            <Path x:Name="Arrow"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"
                                                  Fill="#FFFFFF"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="5,0,25,0"
                                            VerticalAlignment="Center"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                    Style="{x:Null}"
                                    Background="{TemplateBinding Background}"
                                    Foreground="{TemplateBinding Foreground}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0"
                                    Margin="0"
                                    Visibility="Hidden"
                                    IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#343A40"
                                            BorderThickness="1"
                                            BorderBrush="#444"
                                            CornerRadius="5">
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Background" Value="#343A40"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#606060"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00A3E0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Background" Value="#343A40"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                 Grid.Column="0"
                                                 Background="{TemplateBinding Background}"
                                                 Foreground="{TemplateBinding Foreground}"
                                                 BorderThickness="0"
                                                 VerticalAlignment="Center"
                                                 Margin="5,0,0,0"/>
                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Foreground="#FFFFFF"
                                        Width="20"
                                        Margin="0,0,5,0">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="#FFFFFF"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                                </Button>
                                <Popup x:Name="PART_Popup"
                                       Placement="Bottom"
                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       AllowsTransparency="True"
                                       PopupAnimation="Slide">
                                    <Border Background="#343A40"
                                            BorderBrush="#444"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                        <Calendar x:Name="PART_Calendar"
                                                  Background="#343A40"
                                                  Foreground="#FFFFFF"
                                                  BorderBrush="#444"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Calendar внутри DatePicker -->
        <Style TargetType="{x:Type Calendar}">
            <Setter Property="Background" Value="#343A40"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Calendar}">
                        <CalendarItem x:Name="PART_CalendarItem"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Кнопка сворачивания окна -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="21" Height="14" Margin="0,10,46,0"
            Background="#252A2E" Click="MinimizeButton_Click">
            <Button.Content>
                <Path x:Name="MinimizeIcon" 
                  Data="M 0 5 H 10" 
                  Stroke="White" 
                  StrokeThickness="2"
                  Stretch="Uniform"
                  Width="18" 
                  Height="8"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <!-- Кнопка переключения полноэкранного режима -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="34" Height="14" Margin="0,10,19,0"
                Background="#252A2E" Click="ToggleFullScreen_Click">
            <Button.Content>
                <Path x:Name="FullScreenIcon" 
                      Data="M 0 0 H 10 V 10 H 0 Z M 2 2 H 8 V 8 H 2 Z" 
                      Fill="White" 
                      Stretch="Uniform"
                      Width="18" 
                      Height="8" RenderTransformOrigin="1.083,-0.867"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Крестик для закрытия -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="8" Height="10" Margin="0,10,10,0"
                Background="#252A2E" Click="CloseButton_Click">
            <Button.Content>
                <TextBlock Text="×" FontSize="14" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Height="18" Width="13"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Панель управления для администратора -->
        <StackPanel Grid.Row="0" Margin="10,24,19,10" Background="#252A2E" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Управление задачами" FontWeight="Bold" Foreground="#FFFFFF" Height="16" Width="1186"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="Название задачи" Foreground="#B0B0B0"/>
                    <TextBox Text="{Binding NewTaskName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,5,0" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Описание задачи" Foreground="#B0B0B0"/>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,5,0" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
                <Button Content="Создать" Command="{Binding CreateTaskCommand}" Margin="0,0,5,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Обновить" Command="{Binding UpdateTaskCommand}" Margin="0,0,5,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Удалить" Command="{Binding DeleteTaskCommand}" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <TextBlock Text="Управление обязанностями" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FFFFFF"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="Название обязанности" Foreground="#B0B0B0"/>
                    <TextBox Text="{Binding NewDutyName, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,0,5,0" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Дата начала" Foreground="#B0B0B0"/>
                    <DatePicker SelectedDate="{Binding NewDutyStartDate}" Width="120" Margin="0,0,5,0"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Дата окончания" Foreground="#B0B0B0"/>
                    <DatePicker SelectedDate="{Binding NewDutyEndDate}" Width="120" Margin="0,0,5,0"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Задача" Foreground="#B0B0B0"/>
                    <ComboBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" DisplayMemberPath="Name" Width="150" Margin="0,0,5,0"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Сотрудник" Foreground="#B0B0B0"/>
                    <ComboBox ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" DisplayMemberPath="FullName" Width="150" Margin="0,0,5,0"/>
                </StackPanel>
                <Button Content="Создать обязанность" Command="{Binding CreateDutyCommand}" Margin="0,0,5,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Обновить обязанность" Command="{Binding UpdateDutyCommand}" Margin="0,0,5,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Удалить обязанность" Command="{Binding DeleteDutyCommand}" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10" Background="#252A2E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Список обязанностей -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0" Background="#252A2E">
                <TextBlock Text="Ваши обязанности" FontWeight="Bold" FontSize="16" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                <ListView ItemsSource="{Binding Duties}" SelectedItem="{Binding SelectedDuty}" Margin="0,5" Height="481" 
                          BorderBrush="#444" BorderThickness="1" Background="#343A40" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=RowSelected}" Value="True">
                                    <Setter Property="Background" Value="#606060" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Style>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="#343A40"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding StartDate, StringFormat=dd.MM.yyyy}"/>
                            <GridViewColumn Header="Конец" DisplayMemberBinding="{Binding EndDate, StringFormat=dd.MM.yyyy}"/>
                            <GridViewColumn Header="Задача" DisplayMemberBinding="{Binding Task.Name}"/>
                            <GridViewColumn Header="Сотрудник" DisplayMemberBinding="{Binding Employee.FullName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <!-- Панель поиска и фильтрации -->
            <StackPanel Grid.Column="1" Background="#252A2E">
                <TextBlock Text="Поиск" FontWeight="Bold" Foreground="#FFFFFF"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <StackPanel>
                        <TextBlock Text="Поиск сотрудников" Foreground="#B0B0B0"/>
                        <TextBox Text="{Binding SearchEmployeeText, UpdateSourceTrigger=PropertyChanged}" Width="150" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                    <Button Content="Искать" Command="{Binding SearchEmployeesCommand}" Margin="5,0,0,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <StackPanel>
                        <TextBlock Text="Поиск задач" Foreground="#B0B0B0"/>
                        <TextBox Text="{Binding SearchTaskText, UpdateSourceTrigger=PropertyChanged}" Width="150" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                    <Button Content="Искать" Command="{Binding SearchTasksCommand}" Margin="5,0,0,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <StackPanel>
                        <TextBlock Text="Поиск обязанностей" Foreground="#B0B0B0"/>
                        <TextBox Text="{Binding SearchDutyText, UpdateSourceTrigger=PropertyChanged}" Width="150" Background="#343A40" Foreground="#FFFFFF" BorderBrush="#444">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                    <Button Content="Искать" Command="{Binding SearchDutiesCommand}" Margin="5,0,0,0" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <TextBlock Text="Фильтрация по срокам" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FFFFFF"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <StackPanel>
                        <TextBlock Text="С даты" Foreground="#B0B0B0"/>
                        <DatePicker SelectedDate="{Binding FilterStartDate}" Width="120" Margin="0,0,5,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="По дату" Foreground="#B0B0B0"/>
                        <DatePicker SelectedDate="{Binding FilterEndDate}" Width="120"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Фильтровать" Command="{Binding FilterDutiesCommand}" Margin="0,5" Background="#00A3E0" Foreground="#FFFFFF" BorderBrush="#444">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="Сотрудники" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FFFFFF"/>
                <ListView ItemsSource="{Binding Employees}" Height="100" Margin="0,5" Background="#343A40" BorderBrush="#444">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Style>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="#343A40"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}"/>
                            <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Position.PositionName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Text="Задачи" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FFFFFF"/>
                <ListView ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" Height="100" Margin="0,5" Background="#343A40" BorderBrush="#444">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Style>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="#343A40"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
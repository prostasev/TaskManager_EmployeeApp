<Window x:Class="EmployeeApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="370" Width="400"
        Background="#252A2E" WindowStyle="None"
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка сворачивания окна -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="11" Height="14" Margin="0,-7,10,0"
    Background="#252A2E" Click="MinimizeButton_Click">
            <Button.Content>
                <Path x:Name="MinimizeIcon" 
          Data="M 0 5 H 10" 
          Stroke="White" 
          StrokeThickness="2"
          Stretch="Uniform"
          Width="18" 
          Height="8"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <!-- Крестик для закрытия -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Margin="0,-10,-10,0"
                Background="#252A2E" Click="CloseButton_Click">
            <Button.Content>
                <TextBlock Text="×" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23" Width="10"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Заголовок -->
        <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"
                   HorizontalAlignment="Center" Margin="0,20,0,30"/>

        <!-- Логин -->
        <TextBlock Text="Имя пользователя" Grid.Row="1" FontSize="14" Foreground="#B0B0B0" Margin="5,0,5,5"/>
        <TextBox Name="UsernameTextBox" Grid.Row="2" Width="300" Height="40"
                 Padding="10" FontSize="16" Background="#343A40" BorderBrush="#444" Foreground="White"
                 HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- Пароль -->
        <TextBlock Text="Пароль" Grid.Row="3" FontSize="14" Foreground="#B0B0B0" Margin="5,15,5,5"/>
        <PasswordBox Name="PasswordBox" Grid.Row="4" Width="300" Height="40"
                     Padding="10" FontSize="16" Background="#343A40" BorderBrush="#444" Foreground="White"
                     HorizontalAlignment="Center" VerticalAlignment="Center">
            <PasswordBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </PasswordBox.Resources>
        </PasswordBox>

        <!-- Кнопка Войти -->
        <Button Content="Войти" Grid.Row="5" Width="300" Height="45" FontSize="16"
                Background="#00A3E0" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Center" Margin="0,20,0,10" Click="LoginButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Ошибка -->
        <TextBlock Name="ErrorTextBlock" Grid.Row="6" Foreground="#FF4500" FontSize="14"
                   HorizontalAlignment="Center" Margin="5,10,5,5" Visibility="Collapsed"/>

        <!-- Подпись -->
        <TextBlock Grid.Row="8" Text="© 2025 EmployeeApp. Все права не защищены  ¯\_(ツ)_/¯" FontSize="12" Foreground="#777"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
    </Grid>
</Window>
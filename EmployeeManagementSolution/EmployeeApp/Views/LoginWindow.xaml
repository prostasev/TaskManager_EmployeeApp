<Window x:Class="EmployeeApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <!-- Логин -->
            <TextBox Name="UsernameTextBox" Width="250" Margin="10" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                     GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus">
                <TextBox.Text>
                    <Binding Path="Username" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <TextBlock x:Name="UsernamePlaceholder" Text="Логин" Foreground="Gray" 
                       VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" />

            <!-- Пароль -->
            <PasswordBox Name="PasswordBox" Width="250" Margin="10" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                         GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
            <TextBlock x:Name="PasswordPlaceholder" Text="Пароль" Foreground="Gray" 
                       VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" />

            <!-- Кнопка Войти -->
            <Button Content="Войти" Width="250" Margin="10" Click="LoginButton_Click"/>
            <TextBlock Name="ErrorTextBlock" Foreground="Red" HorizontalAlignment="Center" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
